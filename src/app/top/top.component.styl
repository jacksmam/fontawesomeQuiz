.ly-main
  width 100%
  height 100%
  display flex
  flex-direction column
  justify-content center
  align-items center

.top-title 
  color white
  font-size 8rem
  text-shadow 4px 3px 0 #1d9d74, 9px 8px 0 rgba(0,0,0,0.15)

.description
  color white
  font-size 2rem
  text-align center

.start-button
  width 400px
  height 100px
  display flex
  justify-content center
  align-items center
  background-color #1A8d68
  border 1px solid #01744F
  color white
  font-size 3rem
  border-radius 50px

  &:hover
      background-color #34A782